body {
    margin-top: 0;
    position: relative;
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: flex;
    -webkit-flex-flow: row wrap;
    -moz-flex-flow: row wrap;
    -ms-flex-flow: row wrap;
    flex-flow: row wrap;
    -webkit-justify-content: center;
    -moz-justify-content: center;
    -ms-justify-content: center;
    -webkit-justify-content: center;
}

#container {
    width: 80%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

header {
    background-image: url("header.jpg");
    background-size: cover;
    width: 100%;
    height: 475px;
    margin: 0 auto;
    text-align: center;
}

#logo {
    vertical-align: middle;
    padding-right: 10px;
}

#leftnav {
    float: left;
    margin-top: 20px;
    margin-left: 60px;
    font-family: 'Open Sans', sans-serif;
    color: #083452;
}

.nav {
    font-family: 'Oswald', sans-serif;
    text-decoration: none;
    color: #083452;
    text-transform: uppercase;
    margin-left: 10px;
}

#rightnav {
    float: right;
    margin-top: 20px;
    margin-right: 60px;
    font-size: 18px;

}

#pageheader {
    clear: both;
    font-size: 75px;
    font-family: 'Open Sans', sans-serif;
    color: white;
    padding-top: 125px;
    margin-bottom: -20px;
}

#page-sub-header {
    font-family: 'Open Sans', sans-serif;
    font-size: 15px;
}

main {
    display: flex;
    flex-direction: row;
    justify-content: center;
    justify-content: space-between;
    width: 800px;
    margin: 0 auto;
}

#article-headline {
    font-family: 'Oswald', sans-serif;
    font-size: 50px;
    color: #083452;
    line-height: 60px;
    margin-bottom: 5px;
}

#article-subheader {
    display: flex;
    flex-direction: row;
    align-content: center;
}

#subheader-avatar-pic {
    height: 35px;
    width: 35px;
    margin: 0px 5px 0px 5px;
}

blockquote {
    border-left: 1px lightgray solid;
    font-family: 'Open Sans', sans-serif;
    padding: 10px 0px 10px 10px;
    font-size: 30px;
    margin: 0 auto;
    color: #106db3
}

.subheader-text {
    font-family: 'Open Sans', sans-serif;
}

.author-name {
    padding: 5px 20px 5px 0px;
    margin-top: 0;
    font-size: 12px;
}

.on {
    padding: 5px 10px 5px 0px;
    margin-top: 0;
    font-size: 12px;
}

.article-date {
    padding-top: 5px;
    margin-top: 0;
    font-size: 12px;
}

.article-text {
    font-family: 'Open Sans', sans-serif;
    font-size: 18px;
}

#share-icons {
    display: flex;
    flex-direction: row;
    background color: black;
}

#left-main {
    width: 500px;
}

#right-main {
    diplay: flex;
    flex-direction: column;
    width: 278px;
}

#avatar {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    margin-left: 14px;
    margin-right: 14px;
}

#avatar-pic {
    height: 70px;
    width: 70px;
    margin: 0 auto;
    padding-top: 40px;
}

#avatar-name {
    font-family: 'Open Sans', sans-serif;
    margin-top: 0;
    margin: 0 auto;
}

#social-media-links {
    display: inline-block;
    color: lightgray;
    text-decoration: none;
    font-family: 'Open Sans', sans-serif;
    margin-top: 5px;
    margin: 0 auto;
    padding-bottom: 60px;
}

.social-media-divide {
    margin: 0 auto;
    display: inline-block;
}

#ad-text {
    font-size: 12px;
    margin-top: 0;
    float: right;
}

#sidebar-heading {
    font-family: 'Oswald', sans-serif;
}

#sidebar-text {
    font-size: 14px;
    font-family: 'Open Sans', sans-serif;
}

#footerarea {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    border-top: 1px lightgray solid;
}

#popular-posts {
    font-family: 'Oswald', sans-serif;
    color: #083452;
    margin: 0 auto;
    font-size: 45px;
    padding-top: 20px;
    padding-bottom: 20px;
}

#footerphotos {
    display: flex;
    flex-direction: row;
    width: 100%;
}

footer {
    background-color: #083452;
    color: white;
    color: lightgray;
    list-style-type: none;
    display: flex;
    flex-direction: row;
}

.footerimage {
    width: 284px;
    height: 309px;
    background-color: #106db3
}

#tiylogo {
    width: 40px;
    height: 30px;
    margin-right: 5px;
}

#logo-copyright {
    margin-right: 120px;
    display: flex;
    flex-direction: row;
    margin-top: 20px;
    margin-left: 90px;
    font-family: 'Open Sans', sans-serif;
    font-size: 12px;
}

#navitems {
    margin-left: 140px;
    font-family: 'Open Sans', sans-serif;
    color: lightgray;
    padding-right: 20px;
}

#navitems a {
    color: lightgray;
    font-size: 12px;
}

.item {
    list-style-type: none;
    display: inline-block;
    color: lightgray;
}

#footerimage1 {
    background-image: url("article-image-1.jpg")
}

#footerimage2 {
    background-image: url("article-image-2.jpg")
}

#footerimage3 {
    background-image: url("article-image-3.jpg")
}

#footerimage4 {
    background-image: url("article-image-4.jpg")
}

.footer-image-text {
    padding-top: 10px;
    font-family: 'Oswald', sans-serif;
    font-size: 25px;
    width: 250px;
    color: white;
    position: absolute;
    bottom: 0;
    margin-bottom: 100px;
    padding-left: 10px;
}
